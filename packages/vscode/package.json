{
  "name": "@mdxtab/vscode",
  "displayName": "MDXTab",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "publisher": "mdxtab",
  "engines": {
    "vscode": "^1.88.0"
  },
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "MDXTab",
      "properties": {
        "mdxtab.preview.showFrontmatter": {
          "type": "boolean",
          "default": false,
          "description": "Show frontmatter and formulas in the MDXTab preview. Disable to hide formulas/frontmatter so only the rendered markdown body is shown."
        }
      }
    },
    "commands": [
      {
        "command": "mdxtab.renderPreview",
        "title": "MDXTab: Render Preview"
      }
    ]
  },
  "scripts": {
    "build": "npm run -w @mdxtab/core build --if-present && tsc -p tsconfig.json",
    "test": "echo \"(no tests yet)\""
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "@types/vscode": "^1.88.0"
  },
  "dependencies": {
    "@mdxtab/core": "0.0.0"
  }
}
