{
  "name": "mdxtab",
  "displayName": "MDXTab",
  "version": "0.2.0",
  "license": "MIT",
  "type": "module",
  "private": true,
  "publisher": "frank-yong",
  "repository": {
    "type": "git",
    "url": "https://github.com/Frank-Yong/MDXTab"
  },
  "engines": {
    "vscode": "^1.88.0"
  },
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:mdxtab.renderPreview",
    "onCommand:mdxtab.validateDocument"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "MDXTab",
      "properties": {
        "mdxtab.preview.markdownIt.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable MDXTab rendering in the built-in Markdown preview using a Markdown-It plugin."
        },
        "mdxtab.preview.showFrontmatter": {
          "type": "boolean",
          "default": false,
          "description": "Show frontmatter and formulas in the MDXTab preview. Disable to hide formulas/frontmatter so only the rendered markdown body is shown."
        }
      }
    },
    "markdown.markdownItPlugins": true,
    "grammars": [
      {
        "scopeName": "mdxtab.markdown",
        "path": "./syntaxes/mdxtab.markdown.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ]
      }
    ],
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets/mdxtab.markdown.json"
      }
    ],
    "commands": [
      {
        "command": "mdxtab.renderPreview",
        "title": "MDXTab: Render Preview"
      },
      {
        "command": "mdxtab.validateDocument",
        "title": "MDXTab: Validate Document"
      }
    ]
  },
  "scripts": {
    "build": "npm run -w @mdxtab/core build --if-present && tsc -p tsconfig.json && node ./scripts/copy-core.mjs",
    "test": "echo \"(no tests yet)\""
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@vscode/vsce": "^2.26.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@mdxtab/core": "0.2.0"
  }
}
